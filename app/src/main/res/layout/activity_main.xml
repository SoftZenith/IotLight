<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="30dp"
    tools:context="mx.edu.ittepic.iotlight.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:paddingLeft="30dp"
            android:text="Sala"
            android:textSize="30dp"/>
        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnSala"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Comedor"
            android:textSize="30dp"/>
        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnComedor"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Recamara 1"
            android:textSize="30dp"/>
        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnRec1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">
        <TextView
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:text="Recamara 2"
            android:textSize="30dp"/>
        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnRec2"/>
    </LinearLayout>

</LinearLayout>
